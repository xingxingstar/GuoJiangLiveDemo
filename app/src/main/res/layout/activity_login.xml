<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/login_bg2"
        android:gravity="bottom"
        android:orientation="vertical"
        tools:context=".ui.user.LoginActivity">

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sx_20dp"
            android:gravity="center"
            android:text="无需注册，一键登录"
            android:textColor="@color/sx_white"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/sx_30dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/sx_20dp"
            android:paddingRight="@dimen/sx_20dp">

            <Button
                android:id="@+id/bnt_qq"
                android:layout_width="@dimen/sx_50dp"
                android:layout_height="@dimen/sx_50dp"
                android:layout_marginRight="@dimen/sx_20dp"
                android:background="@drawable/sel_qq_press" />

            <Button
                android:id="@+id/bnt_weixin"
                android:layout_width="@dimen/sx_50dp"
                android:layout_height="@dimen/sx_50dp"
                android:layout_marginRight="@dimen/sx_20dp"
                android:background="@drawable/sel_weixin_press" />

            <Button
                android:id="@+id/bnt_weibo"
                android:layout_width="@dimen/sx_50dp"
                android:layout_height="@dimen/sx_50dp"
                android:layout_marginRight="@dimen/sx_20dp"
                android:background="@drawable/sel_weibo_press" />

            <Button
                android:id="@+id/bnt_phone"
                android:layout_width="@dimen/sx_50dp"
                android:layout_height="@dimen/sx_50dp"
                android:background="@drawable/sel_phone_press" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/sx_20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_user_proctol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/user_protcol"
                android:textSize="@dimen/sp_12" />


        </LinearLayout>

    </LinearLayout>
</layout>