<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.zhuwojia.guojianglivedemo.ui.home.HomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sx_orange"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sx_10dp"
                android:layout_marginRight="@dimen/sx_20dp"
                android:src="@drawable/sel_search_press" />

            <com.example.zhuwojia.guojianglivedemo.view.TopNavigationView
                android:id="@+id/tnv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></com.example.zhuwojia.guojianglivedemo.view.TopNavigationView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sx_10dp"
                android:layout_marginRight="@dimen/sx_20dp"
                android:src="@drawable/sel_list_press" />
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_home_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>

    </LinearLayout>
</layout>