<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/cb_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sx_150dp"
        app:image_scale_type="fit_xy"
        app:indicator_drawable_selected="@drawable/icon_selected"
        app:indicator_drawable_unselected="@drawable/icon_unselected"
        app:indicator_height="@dimen/sx_5dp"
        app:indicator_margin="@dimen/sx_3dp"
        app:indicator_width="@dimen/sx_5dp"
        app:is_auto_play="true" />
</LinearLayout>